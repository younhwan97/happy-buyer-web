// start page title
.row
    .col-12
        .page-title-box
            .page-title-right
                a.btn.btn-primary(href='./addproduct')
                    |  상품 추가
            h4.page-title 상품 관리
// end page title
.row
    .col-12
        .card
            .card-body
                .row.mb-2
                    .col-sm-12
                        .col-sm-12
                            h6 상품 상태
                            button(value="all" type="button" class="btn btn-success rounded-pill m-1 product-status-option" onclick="checkProductStatusOption(this)") 전체 보기
                            button(value="sale" type="button" class="btn btn-light rounded-pill m-1 product-status-option" onclick="checkProductStatusOption(this)") 판매중
                            button(value="soldOut" type="button" class="btn btn-light rounded-pill m-1 product-status-option" onclick="checkProductStatusOption(this)") 품절
                        .col-sm-12
                            h6 상품 분류
                            each val, index in ['과일', '정육', '채소', '수산/건해산', '쌀/잡곡', '생수/음료', '커피/차', '과자/빙과', '장/양념', '라면/즉석식품', '우유/유제품', '세탁/청소', '제지/위생', '주방', '반려동물']
                                button.btn.btn-light.rounded-pill.m-1(type="button" value=val) #{val}
                .table-responsive
                    table#basic-datatable.table.table-centered.w-100.dt-responsive.nowrap
                        thead.table-light
                            tr
                                th.d-none 상품번호
                                th(style='width: 70px;') 상태
                                th 분류
                                th 상품
                                th 가격
                                th(style='width: 70px;') 수정/삭제
                        tbody
                            each product in products
                                - let status
                                if product.status
                                    - status = '판매중'
                                else
                                    - status = '품절'
                                - let price = product.price
                                - price = price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',')
                                - let url = product.image_url
                                - let name = product.name

                                tr
                                    th.d-none #{product.product_id}
                                    td
                                        if status === '판매중'
                                            span.badge.badge-outline-primary.font-14 #{status}
                                        else
                                            span.badge.badge-outline-danger.font-14 #{status}
                                    td #{product.category}
                                    td
                                        img.rounded.me-3(title=name height="68" alt="상품 이미지" src=url)
                                        p.m-0.d-inline-block.align-middle.font-16 #{name}
                                    td #{price}원
                                    td.table-action
                                        button.btn
                                            a.action-icon(href='javascript:void(0);')
                                                i.mdi.mdi-square-edit-outline
                                        button.btn(type='button' data-bs-toggle='modal' data-bs-target='#confirm-to-remove-product')
                                            a.action-icon(href='javascript:void(0);')
                                                i.mdi.mdi-delete
// Modal
#confirm-to-remove-product.modal.fade(tabindex="-1" role="dialog" aria-labelledby="standard-modalLabel" aria-hidden="true")
    .modal-dialog.modal-dialog-centered
        .modal-content
            .modal-header
                h5.modal-title 상품 제거
                button.btn-close(type='button' data-bs-dismiss='modal' aria-hidden='true')
            .modal-body
                | 상품을 정말 제거하시겠습니까?
            .modal-footer
                button.btn.btn-secondary(type='button' data-bs-dismiss='modal') 취소
                button.btn.btn-light(type='button' onclick="removeProduct()") 확인