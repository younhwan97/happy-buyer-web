// start page title
.row
    .col-12
        .page-title-box
            h4.page-title 주문/배달 조회
// end page title
.row
    .col-12
        .card
            .card-body
                .row.mb-2
                    .col-sm-12
                        h6 배달 상태
                        - let temp = "light"
                        a(href="/")
                            if options.ds === "ready"
                                - temp = "success"
                            else
                                - temp = "light"
                            button(id="product-status-filter-option-1" value="product-status-filter-option-1" type="button" class=`btn btn-${temp} rounded-pill m-1`)
                                | 배달 준비
                        a(href="/?ds=completed")
                            if options.ds === "completed"
                                - temp = "success"
                            else
                                - temp = "light"
                            button(id="product-status-filter-option-2" value="product-status-filter-option-1" type="button" class=`btn btn-${temp} rounded-pill m-1`)
                                | 배달 완료
                        a(href="/?ds=all")
                            if options.ds === "all"
                                - temp = "success"
                            else
                                - temp = "light"
                            button(id="product-status-filter-option-3" value="product-status-filter-option-1" type="button" class=`btn btn-${temp} rounded-pill m-1`)
                                | 전체
                .table-responsive
                    table.table.table-centered.mb-0
                        thead.table-light
                            tr
                                th(style='width: 20px;')
                                    .form-check
                                        input#customCheck1.form-check-input(type='checkbox')
                                        label.form-check-label(for='customCheck1') &nbsp;
                                th 주문 번호
                                th 날짜
                                th 결제 방법
                                th 금액
                                th 배달 상태
                                th(style='width: 120px;') 주문 상세
                        tbody
                            each order in orders
                                - let price = order.price
                                - price = price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',');
                                - let timezoneOffset = new Date().getTimezoneOffset() * 60000;
                                - let date = new Date(order.date - timezoneOffset)
                                - date = date.toISOString().replace(/T/, ' ').replace(/\..+/, '')

                                tr
                                    td
                                        .form-check
                                            input#customCheck2.form-check-input(type='checkbox')
                                            label.form-check-label(for='customCheck2') &nbsp;
                                    td #{order.order_id}
                                    td
                                        small.text-muted #{date}
                                    td #{order.payment}
                                    td #{price}원
                                    td
                                        i.mdi.mdi-circle.text-success
                                        if !order.delivery_status
                                            |  배달 준비
                                        else
                                            |  배달 완료
                                    td
                                        button.btn.btn-outline-secondary.rounded-pill(type='button' data-bs-toggle='modal' data-bs-target='#order-detail') 주문 상세
                // order detail modal
                #order-detail.modal.fade(tabindex='-1' role='dialog' aria-labelledby='standard-modalLabel' aria-hidden='true')
                    .modal-dialog
                        .modal-content
                            .modal-header
                                h4#standard-modalLabel.modal-title 주문 번호:
                                button.btn-close(type='button' data-bs-dismiss='modal' aria-hidden='true')
                            .modal-body
                                | ...
                            .modal-footer
                                button.btn.btn-light(type='button' data-bs-dismiss='modal') Close
                                button.btn.btn-primary(type='button') Save changes