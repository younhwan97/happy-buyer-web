                    // end col
                .table-responsive
                    table.table.table-centered.mb-0
                        thead.table-light
                            tr
                                th(style='width: 20px;')
                                    .form-check
                                        input#customCheck1.form-check-input(type='checkbox')
                                        label.form-check-label(for='customCheck1') &nbsp;
                                th 주문 번호
                                th 날짜
                                th 결제 방법
                                th 금액
                                th 배달 상태
                                th(style='width: 125px;') Action
                        tbody
                            each order in orders
                                - let price = order.price
                                - price = price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',');
                                - let timezoneOffset = new Date().getTimezoneOffset() * 60000;
                                - let date = new Date(order.date - timezoneOffset)
                                - date = date.toISOString().replace(/T/, ' ').replace(/\..+/, '')

                                tr
                                    td
                                        .form-check
                                            input#customCheck2.form-check-input(type='checkbox')
                                            label.form-check-label(for='customCheck2') &nbsp;
                                    td
                                        a.text-body.fw-bold(href) #{order.order_id}
                                    td
                                        small.text-muted #{date}
                                    td
                                        h5
                                            span.badge.badge-success-lighten.font-16 #{order.payment}
                                    td #{price}원
                                    td
                                        h5
                                            if !order.delivery_status
                                                span.badge.badge-info-lighten.font-16 배달 준비
                                            else
                                                span.badge.badge-secondary-lighten.font-16 배달 완료
                                    td
                                        a.action-icon(href='javascript:void(0);')
                                            i.mdi.mdi-eye
                                        a.action-icon(href='javascript:void(0);')
                                            i.mdi.mdi-square-edit-outline
                                        a.action-icon(href='javascript:void(0);')
                                            i.mdi.mdi-delete
